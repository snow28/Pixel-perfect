.checkboxes
	position relative
	left 110px
	top 370px
	padding-top 35px
	width 780px
	font-family bolt
	display block
	font-size 21px
	margin-bottom 50px
	&__1
		visibility hidden
	&__description
		position relative
		top -23px
		left 30px
	&__checkbox
		flex-grow 1
		width 200px
		margin-right 60px
	&__box
		background-image url('../images/box.png')
		width 20px
		height 20px
		background-repeat no-repeat
		position relative
		&:after
			content url('../images/check.png')
			top -10px
			left 3px
			display none
			position absolute

	&__header
		font-size 21px
	&__explanation
		padding-top 10px
		padding-bottom 20px
		font-family sans-serif
		font-size 15px
		color #565656

	&__column
		display flex
		flex-flow row wrap
		height auto


.checkboxes__box.active
	&:after
		display block
